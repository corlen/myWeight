<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" 
						"http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html> 
<head>
	<title>MyWeight - Edit Weight</title>
	<%= stylesheet_link_tag "myweight", :media => "all" %>
</head> 
<body id="store">
<h2>Edit Weight</h2>
<p>Go to <%= link_to "weights", home_index_path%>.</p>
<%= form_for(@weight) do |f| %>
	<% if @weight.errors.any? %>
		<div id="error_explanation">
			<h2><%= pluralize(@weight.errors.count, "error") %> prohibited this weight from being saved:</h2>
			<ul>
			<% @weight.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
			<% end %>
			</ul>
		</div>
	<% end %>
	<table>
		<tr>
			<td><div class="tab_profile_header"><%= f.label :weight %></div></td>
			<td align="left"><div class="tab_profile_value"><%= f.text_field :weight, :size => 5 %>kgs</div></td>
		</tr>
		<tr>
			<td><div class="tab_profile_header"><%= f.label :date %></div></td>
			<td align="left"><div class="tab_profile_value"><%= f.text_field :date, :value => @weight.date.strftime("%d/%m/%Y %H:%M"), :size => 18%></div></td>
		</tr>
		<tr>
			<td><div class="tab_profile_header"><%= f.label :waist %></div></td>
			<td align="left"><div class="tab_profile_value"><%= f.text_field :waist, :size => 5%>cm</div></td>
		</tr>
		<tr>
			<td><div class="tab_profile_header"><%= f.label :neck %></div></td>
			<td align="left"><div class="tab_profile_value"><%= f.text_field :neck, :size => 5%>cm</div></td>
		</tr>
		<tr>
			<td><div class="tab_profile_header"><%= f.label :hip %></div></td>
			<td align="left"><div class="tab_profile_value"><%= f.text_field :hip, :size => 5%>cm</div></td>
		</tr>
		<tr>
			<td align="center" colspan="2"><div class="tab_profile_value"><%= f.submit %></div></td>
		</tr>
	</table>
<% end %>

</body>
</html>
