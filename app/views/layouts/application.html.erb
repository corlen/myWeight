<!DOCTYPE html>
<html>
	<head>
		<title>MyWeight</title>
		<%= stylesheet_link_tag :all %>
		<%= javascript_include_tag :defaults %>
		<%= csrf_meta_tag %>
	</head>
	<body>
		<div id="user_errors">
			<p class="notice">
				<%= notice %>
			</p>
			<p class="alert">
				<%= alert %>
			</p>
		</div>
		<div id="user_nav">
			<% if user_signed_in? %>
			Signed in as <%= current_user.email %>. Profile <%= link_to "here", user_profile_index_path%>. Not you?
			<%= link_to "Sign out", destroy_user_session_path, :method => :delete %>
			<% end %>
		</div>
		<%= yield %>

	</body>
</html>
