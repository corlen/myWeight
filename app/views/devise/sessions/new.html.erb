<h2 class="form-signin-heading">Sign in</h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :class => "form-signin") do |f| %>
  <div><%= f.label :email %><%= f.email_field :email , :class => "input-block-level", :size => 30, :placeholder => "Email address"%></div>

  <div><%= f.label :password %><br />
  <%= f.password_field :password , :class => "input-block-level", :size => 30%></div>

  <div><%= f.submit "Sign in" , :class => "btn btn-medium btn-primary"%></div>
<% end %>

<%= render :partial => "devise/shared/links" %>